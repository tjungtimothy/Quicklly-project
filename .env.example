# Solace AI Mobile - Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# =============================================================================
# App Configuration
# =============================================================================
NODE_ENV=development
APP_VERSION=1.0.0
MIN_SUPPORTED_VERSION=1.0.0

# =============================================================================
# API Configuration
# =============================================================================
# Backend API URL (REQUIRED)
# - Development: http://localhost:3000/api
# - Staging: https://staging-api.yourdomain.com/v1
# - Production: https://api.yourdomain.com/v1
API_BASE_URL=http://localhost:3000/api
EXPO_PUBLIC_API_URL=http://localhost:3000/api/v1

# API Request Timeout (milliseconds)
API_TIMEOUT=30000
EXPO_PUBLIC_API_TIMEOUT=30000

# =============================================================================
# Security (REQUIRED for production)
# =============================================================================
# Generate strong random keys for production
JWT_SECRET_KEY=your-jwt-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here

# =============================================================================
# OAuth Configuration (Social Login)
# =============================================================================

# Google OAuth
# Get credentials from: https://console.cloud.google.com/
# 1. Create a new project or select existing
# 2. Enable Google+ API and Google Sign-In API
# 3. Create OAuth 2.0 credentials (Web application + iOS + Android)
# 4. Add authorized redirect URIs:
#    - iOS: freudai://auth/callback
#    - Android: freudai://auth/callback
#    - Web: http://localhost:19006/auth/callback (dev), https://freud.ai/auth/callback (prod)
EXPO_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID=your_google_web_client_id_here.apps.googleusercontent.com

# Facebook OAuth
# Get credentials from: https://developers.facebook.com/apps/
# 1. Create a new app or select existing
# 2. Add Facebook Login product
# 3. Configure OAuth redirect URIs: freudai://auth/callback
# 4. Add iOS Bundle ID and Android Package Name
EXPO_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id_here
EXPO_PUBLIC_FACEBOOK_APP_NAME=freud.ai

# Microsoft OAuth (Azure AD)
# Get credentials from: https://portal.azure.com/
# 1. Register a new application in Azure AD
# 2. Add platform: Mobile and desktop applications
# 3. Add redirect URI: freudai://auth/callback
# 4. Grant API permissions: User.Read, openid, profile, email
EXPO_PUBLIC_MICROSOFT_CLIENT_ID=your_microsoft_client_id_here
EXPO_PUBLIC_MICROSOFT_TENANT_ID=common

# Apple Sign-In
# Apple Sign-In doesn't require client ID for native iOS
# Configure in Xcode: Signing & Capabilities > Sign in with Apple
# For web, get Service ID from: https://developer.apple.com/account/resources/identifiers/list/serviceId
EXPO_PUBLIC_APPLE_SERVICE_ID=your_apple_service_id_here

# OAuth Redirect Scheme (DO NOT CHANGE unless rebranding)
EXPO_PUBLIC_OAUTH_REDIRECT_SCHEME=freudai

# =============================================================================
# Authentication Configuration (Enterprise)
# =============================================================================

# Session Timeout (milliseconds)
# Default: 1800000 (30 minutes)
EXPO_PUBLIC_SESSION_TIMEOUT=1800000

# Token Refresh Threshold (milliseconds)
# Default: 300000 (5 minutes)
EXPO_PUBLIC_TOKEN_REFRESH_THRESHOLD=300000

# Maximum Login Attempts
# Default: 5
EXPO_PUBLIC_MAX_LOGIN_ATTEMPTS=5

# Login Lockout Duration (milliseconds)
# Default: 900000 (15 minutes)
EXPO_PUBLIC_LOCKOUT_DURATION=900000

# Storage Key Prefix
EXPO_PUBLIC_STORAGE_PREFIX=@solace_

# Enable Storage Encryption
EXPO_PUBLIC_STORAGE_ENCRYPTION=true

# Enable Biometric Authentication
EXPO_PUBLIC_BIOMETRIC_ENABLED=true

# Enable MFA (Multi-Factor Authentication)
EXPO_PUBLIC_MFA_ENABLED=false

# Enable Device Fingerprinting
EXPO_PUBLIC_DEVICE_FINGERPRINT=true

# Enable Audit Logging
EXPO_PUBLIC_AUDIT_LOGGING=true

# Password Requirements
EXPO_PUBLIC_PASSWORD_MIN_LENGTH=8
EXPO_PUBLIC_PASSWORD_REQUIRE_SPECIAL=true

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_ANALYTICS=false
ENABLE_CRASH_REPORTING=false
ENABLE_VOICE_CHAT=false
ENABLE_CRISIS_DETECTION=true
ENABLE_OFFLINE_MODE=false

# Auth Feature Flags
EXPO_PUBLIC_EMAIL_VERIFICATION=true
EXPO_PUBLIC_PASSWORD_RESET=true
EXPO_PUBLIC_PROFILE_UPDATES=true
EXPO_PUBLIC_REMEMBER_ME=true

# =============================================================================
# Crisis Resources
# =============================================================================
CRISIS_HOTLINE_NUMBER=988
EMERGENCY_CONTACT_EMAIL=help@solace-ai.com

# =============================================================================
# Analytics & Monitoring (Optional)
# =============================================================================
EXPO_PUBLIC_ANALYTICS_ENABLED=false
EXPO_PUBLIC_ERROR_TRACKING=false
# EXPO_PUBLIC_SENTRY_DSN=your-sentry-dsn-here

# =============================================================================
# Development Only
# =============================================================================
# These are automatically used in development mode if not set above
# DEV_JWT_SECRET=dev-only-secret-key
# DEV_ENCRYPTION_KEY=dev-only-encryption-key

# Use Mock API (Development)
EXPO_PUBLIC_USE_MOCK_API=false

# Skip Authentication (Development - WARNING: Never enable in production!)
EXPO_PUBLIC_SKIP_AUTH=false

# Enable Redux DevTools
EXPO_PUBLIC_REDUX_DEVTOOLS=false

# Enable Debug Logging
EXPO_PUBLIC_DEBUG=false

# =============================================================================
# IMPORTANT NOTES
# =============================================================================
# 1. NEVER commit .env to version control - only commit .env.example
# 2. Use EXPO_PUBLIC_ prefix for variables accessed in React Native code
# 3. Restart Expo dev server after changing environment variables
# 4. Use different .env files per environment (.env.development, .env.production)
# 5. For production: rotate keys regularly, enable MFA, use HTTPS
# 6. See docs/ENTERPRISE_AUTH.md for detailed authentication configuration
